        android:textSize="20sp" />

    <Button
        android:id="@+id/btnvolver1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="volver!" />

    <TextView
        android:id="@+id/lblSalida2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
