<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a16alfonsofa.a3aplicaciones.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROYECTO PARA MOVERNOS ENTRE ACTIVIDADES" />

    <Button
        android:id="@+id/btnactividad2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ir actividad 2"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnactividad3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ir actividad 3"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnOTRAactividad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ir a cuenta clicks"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lblSalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>


</LinearLayout>
