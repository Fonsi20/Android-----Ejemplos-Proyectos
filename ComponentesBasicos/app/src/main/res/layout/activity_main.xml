<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a16alfonsofa.componentesbasicos.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/texto1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eaeaea"
                android:padding="10dp"
                android:text="Primer Componente, una TextView"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribre solo numeros"
                android:inputType="number|textMultiLine"
                android:textColorHint="#000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextAny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Escribre numeros con decimales con signo"
                android:inputType="numberDecimal|numberSigned|textMultiLine"
                android:textColorHint="#000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextAny2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Escribre tu lo que quieras"
                android:textColorHint="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boton_redondo"
                android:drawablePadding="10dp"
                android:text="Button"
                android:textColor="#fff"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imgBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

            <ToggleButton
                android:id="@+id/tgBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cambiar"
                android:textOff="NO PINCHES"
                android:textOn="PINCHA"/>

            <RadioGroup
                android:id="@+id/rbg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Aceptame"
                    android:onClick="OnCheckRadioGroup"/>

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="no me aceptes"
                    android:onClick="OnCheckRadioGroup"/>

            </RadioGroup>

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="todo"
                android:text="PINCHE PUTO" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="todo"
                android:text="PINCHE LOCO" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="todo"
                android:text="PINCHE LOCO" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ENCIENDE" />

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
