<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a16alfonsofa.ejemplointentsimplicitos.MainActivity">

    <TextView
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proyecto con intents Implicitos en contactos" />

    <Button

        android:id="@+id/btnContactos"
        android:layout_marginTop="20dp"
        android:background="#4B7799"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar en contactos"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/btnLlamar"
        android:layout_marginTop="20dp"
        android:background="#4B8799"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LLamar directamente"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/btnMarcarNumero"
        android:layout_marginTop="20dp"
        android:background="#FF7456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marcar Numero"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/btnNavegador"
        android:layout_marginTop="20dp"
        android:background="#CC2C27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Navegador ONLINE Fon"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/btnDial"
        android:layout_marginTop="20dp"
        android:background="#2EA9CC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar en el dial"
        android:textColor="#fff"/>

</LinearLayout>
